compressFiles() {
# compress all files individually plus include directories

    compFiles() {
        for i in *; do 
            tar -czf $i.tar.gz $i
        done
        echo
        echo -e "${CYAN}Done compressing all files in the directory${NC}"
        echo
    }

    compAll() {
        for i in *; do 
            tar -czvf $i.tar.gz $i
        done
        echo
        echo -e "${CYAN}Done compressing all files and directories${NC}"
        echo
    }

    read -p "Include directories? (y/n)  "  
    if [[ "${REPLY}" =~ ^[Yy]$ ]]; then
        compAll
    else
        compFiles
    fi
}
