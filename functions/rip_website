rip_website() {
# Download an entire website for review offline

    read -rp "Please enter the target website address -->  " RIP_TARGET

    wget \
     --recursive \
     --no-clobber \
     --page-requisites \
     --html-extension \
     --convert-links \
     --restrict-file-names=windows \
     --domains website.org \
     --no-parent \
     --directory-prefix="${HOME}/Downloads" \
     "${RIP_TARGET}"
}
